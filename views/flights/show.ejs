<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/movies/show.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <section>
    <div>Airline: <%= flight.airline %></div>
    <div>Airport: <%= flight.airport %></div>
    <div>Flight Number: <%= flight.flightNo %></div>
    <div>Departure: <%= flight.departs %></div>
    <div>Tickets: <%= flight.tickets %></div>
  </section>
  <h2>Add a Ticket</h2>
  <form
    action="/flights/<%= flight._id %>/tickets"
    method="POST"
  >
  <label for="seat-select">Select Seat</label>
  <input name="seat" required pattern="[A-F][1-9]\d">
  <button type="submit">Submit Seat</button>
  </form>
  <% if (flight.tickets.length) { %>
    <table>
      <thead>
        <tr>
          <th>Seat</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% flights.tickets.forEach(ticket => { %>
          <tr>
            <td><%= ticket.createdAt.toLocaleDateString() %></td>
            <td><%= ticket.seat %></td>
            <td><%= ticket.price %></td>
          </tr>
        <% }) %>
    </table>
    <% } else { %>
      <h3>No Tickets Reserved Yet</h3>
    <% } %>
  </main>


  <%- include('../partials/footer') %>