<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<main>
  <div id="flight-list">
    <h1>Flight List</h1>
  </div>
  <table id="flight-table">
    <thead>
      <tr>
        <th>Airline</th>
        <th>Airport </th>
        <th>Flight No. </th>
        <th>Departure Date/Time </th>
      </tr>
    </thead>
    <tbody>
      <% flights.forEach (flight=> { %>
        <tr>
          <td><%= flight.airline %></td>
          <td><%= flight.airport %></td>
          <td><%= flight.flightNo %></td>
          <td><%= flight.departs %></td>
          <td id="detailsTD"><a href="/flights/<%= flight._id %>">DETAILS</a></td>
          <td>
          <form action="/flights/<%= flight._id %>?_method=DELETE" method="POST" id="delete-flight-form">
            <button id="deleteBtn">Delete Flight</button>
          </form>
          </td>
        </tr>
        <% }) %>
    </tbody>
  </table>
</main>

<%- include('../partials/footer') %>

