<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<main>
	<h1><%= title %></h1>
  <div>
    <p id="meal">Please first ensure that the meal is not already in the dropdown menu.</p>
  </div>
  <select>
    <% meals.forEach(function(meal) { %>
      <option><%= meal.name %></option>
    <% }) %>
  </select>
  <br>
  <form id="add-meal-form" action="/meals" method="POST">
    <label for="meal-input">Meal:</label>
    <input type="text" name="name" id="meal-input">
    <button type="submit">Add Meal</button>
  </form>
</main>

<%- include('../partials/footer') %>